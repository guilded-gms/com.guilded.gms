<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>	
		<categories>
			<!-- guilded -->
			<category name="guilded"></category>
			<category name="guilded.index">
				<parent>guilded</parent>
			</category>
			<category name="guilded.index.general">
				<parent>guilded.index</parent>
			</category>
			<!-- /guilded -->
		</categories>
		
		<options>
			<!-- module -->
			<option name="module_calendar">
				<categoryname>"module.system</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>	
			<option name="module_dkp">
				<categoryname>"module.system</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>	
			<!-- /module -->			
		
			<!-- general -->
			<option name="install_date">
				<categoryname>general</categoryname>
				<optiontype>integer</optiontype>
				<hidden>1</hidden>
			</option>
			<option name="users_online_record">
				<categoryname>general</categoryname>
				<optiontype>integer</optiontype>
				<hidden>1</hidden>
			</option>
			<option name="users_online_record_time">
				<categoryname>general</categoryname>
				<optiontype>integer</optiontype>
				<hidden>1</hidden>
			</option>
			<!-- /general -->
			
			<!-- index.general -->
			<option name="index_enable_stats">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="index_enable_online_list">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<options>module_users_online</options>
			</option>
			<option name="users_online_record_no_guests">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<options>module_users_online</options>
			</option>
			<option name="index_enable_users_online_legend">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<options>module_users_online</options>
			</option>
			<option name="index_page_redirect">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>Text</optiontype>
				<defaultvalue></defaultvalue>
			</option>
			<!-- /index.general -->
		</options>	
	</import>
</data>
