<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>	
		<categories>
			<!-- guilded -->
			<category name="guilded"></category>
			<category name="guilded.general">
				<parent>guilded</parent>
			</category>
			<category name="guilded.index">
				<parent>guilded</parent>
			</category>
			<category name="guilded.index.general">
				<parent>guilded.index</parent>
			</category>
			<category name="guilded.recruitment">
				<parent>guilded</parent>
			</category>
			<category name="guilded.calendar">
				<parent>guilded</parent>
			</category>
			<!-- /guilded -->
		</categories>
		
		<options>
			<!-- modules -->
			<option name="gms_module_recruitment">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="gms_module_calendar">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="gms_module_credit_system">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="gms_module_role_play">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="gms_module_instance_progress">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<!-- /modules -->

			<!-- general -->
			<option name="gms_install_date">
				<categoryname>general</categoryname>
				<optiontype>integer</optiontype>
				<hidden>1</hidden>
			</option>
			<!-- /general -->

			<!-- guilded.general -->
			<option name="gms_default_game_id">
				<categoryname>guilded.general</categoryname>
				<optiontype>GameSelect</optiontype>
			</option>
			<option name="gms_default_guild_id">
				<categoryname>guilded.general</categoryname>
				<optiontype>GuildSelect</optiontype>
			</option>
			<!-- /guilded.general -->

			<!-- guilded.index.general -->
			<option name="gms_index_enable_stats">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="gms_index_enable_online_list">
				<categoryname>guilded.index.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<options>module_users_online</options>
			</option>
			<!-- /guilded.index.general -->

			<!-- guilded.recruitment -->
			<option name="gms_guild_recruitment_decline_character">
				<categoryname>guilded.recruitment</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<!-- /guilded.recruitment -->

			<!-- guilded.calendar -->
			<option name="gms_calendar_list_items">
				<categoryname>guilded.calendar</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>50</defaultvalue>
			</option>
			<!-- /guilded.calendar -->
		</options>	
	</import>
</data>
